{
    "name"       : "reymon/easy-keyboard",
    "description": "An easy keyboard builder for Telegram Api syntax",
    "keywords"   : [
        "bot",
        "api",
        "easy",
        "keyboard",
        "builder",
        "telegram",
        "telegram-api"
    ],
    "type"   : "library",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name" : "Mahdi",
            "email": "mahdi.talaee1379@gmail.com"
        },
        {
            "name" : "AmirHossein Jafari",
            "email": "amirhosseinjafari8228@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Reymon\\EasyKeyboard\\": "./src"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Reymon\\EasyKeyboard\\Test\\": "./tests"
        }
    },
    "require": {
        "php-64bit"   : ">=8.0",
        "ext-json"    : "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit"          : "^9",
        "amphp/php-cs-fixer-config": "^2.0"
    },
    "scripts": {
        "build": [
            "@cs-fix",
            "@test"
        ],
        "cs"    : "php ./vendor/bin/php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php ./vendor/bin/php-cs-fixer fix -v --diff",
        "test"  : "php -d zend.assertions=1 -d assert.exception=1 ./vendor/bin/phpunit --coverage-text tests"
    }
}